{% extends 'page.twig' %}

{% block scripts %}
    <script src="{{fwurls.parsley}}"></script>
{% endblock scripts %}

{% block header %}
    <div class="col-md-12">
	<h1>Contact</h1>
    </div>
{% endblock header %}

{% block onload %}
    $('#cform').parsley()
{% endblock onload %}

{% block main %}
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
	    {%if done %}
		<h3>We'll be in touch as soon as possible!</h3>
	    {% endif %}
	    <form id="cform" action="#" method="post" role="form">
		<input type="hidden" name="details" value="1"/>
		<div class="form-group">
		    <label for="sj" class="control-label">Subject</label>
		    <input type="text" id="sj" name="subject" placeholder="Subject" class="form-control" required="required"/>
		</div>
		<div class="form-group">
		    <label for="ms" class="control-label">Message</label>
		    <textarea id="ms" name="message" placeholder="Message..." class="form-control" required="required"></textarea>
		</div>
		<div class="form-group">
		    <label for="em" class="control-label">Your Email Address</label>
		    <input type="email" id="em" name="sender" placeholder="Email address" class="form-control" required="required"/>
		</div>
		<button class="btn btn-primary" type="submit">Send</button>
	    </form>
        </div>
    </div>
{% endblock main %}

{% block pagefooter %}
{% endblock pagefooter %}